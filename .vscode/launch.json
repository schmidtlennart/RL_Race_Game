{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}", // so that debugger starts in workspace cwd
            "env": { "PYTHONPATH": "${workspaceRoot}"}, // has to be added somehow for debugger find custom modules inside workspace folder
            "args": ["load"] // Add your CLI arguments here
        }
    ]
}